{
   "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
   },
   "extends": ["eslint:recommended"],
   "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
   },
   "parserOptions": {
      "ecmaVersion": 2020,
      "ecmaFeatures": {
         "jsx": true
      }
   },
   "plugins": ["react"],
   "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "windows"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-console": [
         "error",
         {
            "allow": ["warn", "error"]
         }
      ]
   }
}
